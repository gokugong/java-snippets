<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN" "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<!-- 
     Checkstyle-Configuration: 
         Manhattan Style Checker 
     Description: 
         Modified version of Sun Java Style Standards to match Manhattan Java Style
-->
<module id="Checker">
	<property id="severity" value="warning" />
	<module id="TreeWalker">
		<property id="tabWidth" value="4" />
		<module id="JavadocMethod">
			<property id="scope" value="package" />
			<property id="suppressLoadErrors" value="true" />
		</module>
		<module id="JavadocType" />
		<module id="JavadocVariable">
			<property id="excludeScope" value="private" />
			<property id="scope" value="nothing" />
		</module>
		<module id="JavadocStyle">
			<property id="severity" value="info" />
		</module>
		<module id="ConstantName">
			<property id="applyToPrivate" value="false" />
		</module>
		<module id="LocalFinalVariableName" />
		<module id="LocalVariableName">
			<property id="allowOneCharVarInForLoop" value="true" />
		</module>
		<module id="MemberName" />
		<module id="MethodName" />
		<module id="PackageName" />
		<module id="ParameterName" />
		<module id="StaticVariableName" />
		<module id="TypeName" />
		<module id="AvoidStarImport" />
		<module id="IllegalImport" />
		<module id="RedundantImport" />
		<module id="UnusedImports" />
		<module id="LineLength">
			<property id="max" value="120" />
		</module>
		<module id="MethodLength" />
		<module id="ParameterNumber">
			<property id="max" value="6" />
			<!-- property id="ignoreOverriddenMethods" value="true" / -->
		</module>
		<module id="GenericWhitespace" />
		<module id="WhitespaceAfter" />
		<module id="WhitespaceAround">
			<property id="tokens"
				value="ASSIGN,BAND,BAND_ASSIGN,BOR,BOR_ASSIGN,BSR,BSR_ASSIGN,BXOR,BXOR_ASSIGN,COLON,DIV,DIV_ASSIGN,EQUAL,GE,GT,LAND,LCURLY,LE,LITERAL_ASSERT,LITERAL_DO,LITERAL_ELSE,LITERAL_FINALLY,LITERAL_RETURN,LITERAL_SYNCHRONIZED,LITERAL_TRY,LITERAL_WHILE,LOR,LT,MINUS,MINUS_ASSIGN,MOD,MOD_ASSIGN,NOT_EQUAL,PLUS,PLUS_ASSIGN,QUESTION,RCURLY,SL,SLIST,SL_ASSIGN,SR,SR_ASSIGN,STAR,STAR_ASSIGN,TYPE_EXTENSION_AND,WILDCARD_TYPE" />
		</module>
		<module id="ModifierOrder" />
		<module id="RedundantModifier" />
		<module id="AvoidNestedBlocks">
			<property id="allowInSwitchCase" value="true" />
		</module>
		<module id="EmptyBlock" />
		<module id="LeftCurly">
			<property id="option" value="nl" />
		</module>
		<module id="NeedBraces">
			<property id="tokens" value="LITERAL_DO,LITERAL_FOR,LITERAL_WHILE" />
			<!-- property id="allowSingleLineStatement" value="true" / -->
		</module>
		<module id="RightCurly">
			<property id="option" value="alone" />
		</module>
		<module id="AvoidInlineConditionals" />
		<module id="EmptyStatement" />
		<module id="EqualsHashCode" />
		<module id="HiddenField" />
		<module id="IllegalInstantiation" />
		<module id="InnerAssignment" />
		<module id="MagicNumber" />
		<module id="MissingSwitchDefault" />
		<module id="SimplifyBooleanExpression" />
		<module id="SimplifyBooleanReturn" />
		<module id="DesignForExtension">
			<property id="severity" value="ignore" />
			<metadata id="net.sf.eclipsecs.core.lastEnabledSeverity"
				value="inherit" />
		</module>
		<module id="FinalClass" />
		<module id="HideUtilityClassConstructor" />
		<module id="InterfaceIsType" />
		<module id="VisibilityModifier" />
		<module id="ArrayTypeStyle" />
		<module id="TodoComment">
			<property id="severity" value="ignore" />
			<metadata id="net.sf.eclipsecs.core.lastEnabledSeverity"
				value="inherit" />
		</module>
		<module id="UpperEll" />
		<module id="AnnotationUseStyle" />
		<module id="MissingDeprecated" />
		<module id="MissingOverride" />
		<module id="InterfaceTypeParameterName">
			<property id="format" value="^[A-Z][A-Z]$" />
		</module>
		<module id="CovariantEquals" />
		<module id="DefaultComesLast" />
		<module id="EqualsAvoidNull" />
		<module id="IllegalCatch">
			<property id="illegalClassNames"
				value="java.lang.Throwable, java.lang.RuntimeException" />
		</module>
		<module id="IllegalThrows" />
		<module id="UncommentedMain" />
	</module>
	<module id="JavadocPackage">
		<property id="severity" value="info" />
	</module>
	<module id="NewlineAtEndOfFile">
		<property id="severity" value="info" />
	</module>
	<module id="Translation" />
	<module id="FileLength" />
	<module id="FileTabCharacter" />
	<module id="RegexpSingleline">
		<property id="severity" value="ignore" />
		<property id="format" value="\s+$" />
		<property id="message" value="Line has trailing spaces." />
		<metadata id="net.sf.eclipsecs.core.lastEnabledSeverity"
			value="inherit" />
	</module>
</module>
